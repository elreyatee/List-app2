<%= form_tag '/login', method: 'post' do %>
  <%= label_tag 'Username:' %>
  <%= text_field_tag :username %>
  </br>
  <%= label_tag 'Password:' %>
  <%= text_field_tag :password %>
  </br>
  <%= label_tag 'Remember Me' %>
  <%= check_box_tag :remember_me, 'yes', true %>
  </br>
  <%= submit_tag 'Login' %>
<% end %>
