<%= form_for @user do |f| %>
  <%= f.label 'Username:' %>
  <%= f.text_field :username %>
  </br>
  <%= f.label 'First Name:' %>
  <%= f.text_field :first_name %>
  </br>
  <%= f.label 'Last Name:' %>
  <%= f.text_field :last_name %>
  </br>
  <%= f.label 'Email:' %>
  <%= f.text_field :email %>
  </br>
  <%= f.label 'Password:' %>
  <%= f.text_field :password %>
  </br>
  <%= f.submit (@user.new_record? ? 'Register' : 'Update') %>
<% end %>
