<div>
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to 'ShoppingList', root_path %></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="left">
        <% if !logged_in? %>
          <li class="divider"></li>
          <li><%= link_to 'Login ', login_path %></li>
          <li class="divider"></li>
        <% end %>

        <% if logged_in? %>
          <li class="divider"></li>
          <li><%= link_to 'Logout ', logout_path %></li>
          <li class="divider"></li>
          <li><%= link_to 'Create List', new_list_path%></li>
          <li class="divider"></li>
        <% end %>
      </ul>

      <% if logged_in? %>
        <ul class="right">
          <li>
            <%= link_to "Hello, #{current_user.username}", edit_user_path(current_user) %>
          </li>
        </ul>
      <% end %>
    </section>
  </nav>
</div>
